	        </visibleWhen>
         </command>
         
         <separator
            name="run"
            visible="true">
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </separator>
         
         <command
            commandId="biz.rapidfire.core.command.Job.test" 
            icon="icons/test.gif"
            >
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </command>
         
         <command
            commandId="biz.rapidfire.core.command.Job.start" 
            icon="icons/start.gif"
            >
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </command>
         
         <command
            commandId="biz.rapidfire.core.command.Job.end" 
            icon="icons/end.gif"
            >
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </command>
         
         <separator
            name="reset"
            visible="true">
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </separator>
         
         <command
            commandId="biz.rapidfire.core.command.Job.reset" 
            icon="icons/reset.gif"
            >
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </command>
         
         <command
            commandId="biz.rapidfire.core.command.Job.resetabortion" 
            icon="icons/resetabortion.gif"
            >
	        <visibleWhen>
	           <with variable="selection">
	              <iterate operator="and">
	                 <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
	              </iterate>
	           </with>
	        </visibleWhen>
         </command>
         
      </menuContribution>
   </extension>

</plugin>
