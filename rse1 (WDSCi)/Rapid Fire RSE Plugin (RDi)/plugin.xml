<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
      	
		<!--
		  ==========================================
		    Rapid Fire SubSystem Configuration
		  ==========================================
		-->
  <extension
     point="com.ibm.etools.systems.core.subsystemfactory">
     <configuration
        systemtypes="iSeries"
        name="%Rapid_Fire"
        iconlive="icons/rapidfire_connected.gif"
        icon="icons/rapidfire.gif"
        category="rapidfire"
        class="biz.rapidfire.rse.subsystem.RapidFireSubSystemFactory"
        vendor="Rapid Fire Project Team"
        id="biz.rapidfire.rse.subsystem.RapidFireSubSystemFactory">
      </configuration>
      
   </extension>

   <extension
         point="com.ibm.etools.systems.core.popupMenus">
      <objectContribution
            subsystemfactoryid="biz.rapidfire.rse.subsystem.RapidFireSubSystemFactory"
            typecategoryfilter="*"
            typefilter="*"
            subtypefilter="*"
            namefilter="*"
            id="biz.rapidfire.rse.job.actions">
            
         <action
               label="%command_Reset_Job_After_Abortion"
               tooltip="%command_Reset_Job_After_Abortion_Description"
               icon="icons/resetabortion.gif"
               class="biz.rapidfire.rse.subsystem.actions.ResetJobAfterAbortionAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.ResetJobAction">
         </action>
            
         <action
               label="%command_Reset_Job"
               tooltip="%command_Reset_Job_Description"
               icon="icons/reset.gif"
               class="biz.rapidfire.rse.subsystem.actions.ResetJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.ResetJobAction">
         </action>
            
         <action
               label="%command_End_Job"
               tooltip="%command_End_Job_Description"
               icon="icons/end.gif"
               class="biz.rapidfire.rse.subsystem.actions.EndJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.EndJobAction">
         </action>
            
         <action
               label="%command_Start_Job"
               tooltip="%command_Start_Job_Description"
               icon="icons/start.gif"
               class="biz.rapidfire.rse.subsystem.actions.StartJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.StartJobAction">
         </action>
            
         <action
               label="%command_Test_Job"
               tooltip="%command_Test_Job_Description"
               icon="icons/test.gif"
               class="biz.rapidfire.rse.subsystem.actions.TestJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.TestJobAction">
         </action>
            
         <action
               label="%command_Display_Job"
               tooltip="%command_Display_Job_Description"
               icon="icons/display.gif"
               class="biz.rapidfire.rse.subsystem.actions.DisplayJobAction"
               enablesFor="1"
               id="biz.rapidfire.rse.subsystem.actions.DisplayJobAction">
         </action>
            
         <action
               label="%command_Delete_Job"
               tooltip="%command_Delete_Job_Description"
               icon="icons/delete.gif"
               class="biz.rapidfire.rse.subsystem.actions.DeleteJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.DeleteJobAction">
         </action>
            
         <action
               label="%command_Copy_Job"
               tooltip="%command_Copy_Job_Description"
               icon="icons/copy.gif"
               class="biz.rapidfire.rse.subsystem.actions.CopyJobAction"
               enablesFor="1"
               id="biz.rapidfire.rse.subsystem.actions.CopyJobAction">
         </action>
            
         <action
               label="%command_Change_Job"
               tooltip="%command_Change_Job_Description"
               icon="icons/change.gif"
               class="biz.rapidfire.rse.subsystem.actions.ChangeJobAction"
               enablesFor="+"
               id="biz.rapidfire.rse.subsystem.actions.ChangeJobAction">
         </action>
         
      </objectContribution>
      
   </extension>
   
      	<!--
      	  ==========================================
      	    Rapid Fire Commands
      	  ==========================================
      	-->

   <extension
      point="org.eclipse.ui.commands">
         
      <category
         name="Rapid Fire"
         id="biz.rapidfire.category.Commands">
      </category>
         
      <command
         id="biz.rapidfire.core.command.Job.change"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Change_Job"
         description="%command_Change_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.copy"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Copy_Job"
         description="%command_Copy_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.delete"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Delete_Job"
         description="%command_Delete_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.display"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Display_Job"
         description="%command_Display_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.test"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Test_Job"
         description="%command_Test_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.start"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Start_Job"
         description="%command_Start_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.end"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_End_Job"
         description="%command_End_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.reset"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Reset_Job"
         description="%command_Reset_Job_Description">
      </command>
         
      <command
         id="biz.rapidfire.core.command.Job.resetabortion"
         categoryId="biz.rapidfire.category.Commands"
         name="%command_Reset_Job_After_Abortion"
         description="%command_Reset_Job_After_Abortion_Description">
      </command>

   </extension>

      	<!--
      	  ==========================================
      	    Rapid Fire Command Handler
      	  ==========================================
      	-->
   
   <extension
      point="org.eclipse.ui.handlers">
      
      <handler
         commandId="biz.rapidfire.core.command.Job.change"
         class="biz.rapidfire.core.handlers.ChangeJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.copy"
         class="biz.rapidfire.core.handlers.CopyJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="1" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.delete"
         class="biz.rapidfire.core.handlers.DeleteJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.display"
         class="biz.rapidfire.core.handlers.DisplayJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="1" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.test"
         class="biz.rapidfire.core.handlers.TestJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.start"
         class="biz.rapidfire.core.handlers.StartJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.end"
         class="biz.rapidfire.core.handlers.EndJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.reset"
         class="biz.rapidfire.core.handlers.ResetJobHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
      <handler
         commandId="biz.rapidfire.core.command.Job.resetabortion"
         class="biz.rapidfire.core.handlers.ResetJobAfterAbortionHandler">
         <enabledWhen>
            <with variable="selection">
               <count value="*" />
               <iterate operator="and">
                  <adapt type="biz.rapidfire.rse.model.RapidFireJobResource" />
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      
   </extension>

</plugin>
